<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:google="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.widget.view.ToggleButton
        android:id="@id/toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        google:switch_on="@mipmap/bg_switch_open"
        google:switch_off="@mipmap/bg_switch_close"
        google:slide_bitmap="@mipmap/slide_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        />

</LinearLayout>
